@page
@model DevExtremeAspNetCoreResponsiveApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>



<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="login.Username">Username</label>
                <input asp-for="login.Username" class="form-control" />
                <span asp-validation-for="login.Username" class="text-warning"></span>
            </div>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <div class="form-group">
                <label asp-for="login.Password">Password</label>
                <input asp-for="login.Password" type="password" class="form-control" />
                <span asp-validation-for="login.Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="login.RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="login.RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="login.RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
                <a asp-action="Register" class="btn btn-primary">Register New User</a>
            </div>
        </form>
    </div>
</div>



